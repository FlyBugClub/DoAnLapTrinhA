@model List<FlyBugClub_WebApp.Models.Device>

<section class="body">
    <div class="container">
        <div class="row">
            <div class="col col-lg-3 left">
                <div class="search">
                    <div class="store-note">
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorem placeat nobis aliquid culpa quasi vero ipsam pariatur quidem ex error, unde expedita minus aspernatur quos nihil, ad assumenda repellat alias.</p>
                    </div>
                    <div class="center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="261" height="4" viewBox="0 0 261 4" fill="none">
                            <path d="M1 2.96216L260.993 0.99995" stroke="#3D3D3D" stroke-opacity="0.8" />
                        </svg>
                    </div>
                    <div class="shopping-function">
                        <p>Giỏ hàng</p>
                        <div class="center">
                            <div class="qty">
                                <p>1</p>
                            </div>
                            <div class="center ">
                                <button class="icon-shopping">
                                    <a asp-action="Payment"
                                       asp-controller="Store">
                                        <i class="fa-solid fa-cart-shopping"></i>
                                    </a>
                                </button>
                            </div>
                        </div>
                        <p>Hoặc tìm kiếm sản phẩm</p>
                        <div class="center">
                            <input type="text" placeholder="Tìm kiếm...">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-lg-9 right">
                <div class="center">
                    <div class="store">
                        <!-- <h1>Cửa hàng</h1> -->
                        <div class="fill-function">
                            <span>Bug Store</span>
                            <select class="category" name="" id="">
                                <option value="" selected>Tất cả</option>
                                <option value="">Cảm biến</option>
                                <option value="">Phần cứng</option>
                                <option value="">Đèn</option>
                                <option value="">Cáp nối</option>
                            </select>
                            <form>
                                <div class="fill">
                                    <button><a href="#">Giảm giá</a></button>
                                    <button><a href="#">Giá tăng dần</a></button>
                                    <button><a href="#">Giá giảm dần</a></button>
                                </div>
                            </form>
                            
                        </div>
                        <hr style="width:100%;text-align:left;margin-left:0; color:white; height: 2px; margin-top: 8px;">
                        <div class="item-store">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col col-xl-4">
                                        <div class="item-card">
                                            <a asp-action="DetailCard"
                                           asp-controller="Store">
                                                <img src="~/img/img_products/@item.ImagePath" alt="Photo item store">
                                                <h3>@item.Name</h3>
                                                <p>Lorem ipsum dolor sit amet consectetur praesentium?</p>
                                                <div class="center icon-card">
                                                    <button class="icon icon-share">
                                                        <a href="#">
                                                            <i class="fa-solid fa-share"></i>
                                                        </a>
                                                    </button>
                                                    <button class="icon icon-love">
                                                        <a href="#">
                                                            <i class="fa-regular fa-heart"></i>
                                                        </a>
                                                    </button>
                                                    <button class="icon icon-share">
                                                        <a href="#">
                                                            <i class="fa-solid fa-cart-plus"></i>
                                                        </a>
                                                    </button>
                                                </div>
                                                <div class="center item-price">
                                                    <h2>@item.Price.000 VNĐ</h2>
                                                </div>
                                            </a>

                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="left-side">
                            <div class="pagination">
                                <ul>
                                    <li class="btn-back">
                                        <a class="page-link" asp-controller=" Store" asp-action="SortProduct" asp-route-page="@(ViewBag.CurrentPage - 1)"><i class="fa-solid fa-location-arrow"></i></a>
                                    </li>
                                    @for (int page1 = 1; page1 <= ViewBag.TotalPages; page1++)
                                    {
                                        <li class="link">
                                            <a onclick="activeLink()" asp-controller="Store" asp-action="SortProduct" asp-route-page="@page1">@page1</a>
                                        </li>
                                    }
                                    <li class="btn-next">
                                        <a class="page-link" asp-controller=" Store" asp-action="SortProduct" asp-route-page="@(ViewBag.CurrentPage + 1)"><i class="fa-solid fa-location-arrow"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>