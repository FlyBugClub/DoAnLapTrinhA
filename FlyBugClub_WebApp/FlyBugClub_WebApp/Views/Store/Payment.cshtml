@model MenuCard

<section class="body payment">
    <div class="container">
        <div class="row">
            <div class="col col-lg-8">
                @*<h1>@ViewBag.sessionId</h1>*@
                @if(Model.Card.GetCountItem() == 0)
                {
                    <div class="title-box">
                        <div class="title-childbox">
                            <h2 class="title-emptycard">Hiện đang không có sản phảm nào trong giở hàng</h2>
                            <div class="center">
                                <button class="shop-emptycard"><a asp-controller="Store" asp-action="Store">Cửa hàng</a></button>
                            </div>
                            
                        </div>
                    </div>
                }
                else
                {
                    <div class="shopping-table">
                        <table class="payment">
                            <thead>
                                <tr>
                                    <th class="first remove"></th>
                                    <th>Hình ảnh</th>
                                    <th>Sản phẩm</th>
                                    <th class="qty">Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th class="last">Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.Card.getAllItem())
                                {
                                    <tr>
                                        <td class="remove"><a asp-controller="Store" asp-action="RemoveItem" asp-route-id="@item.Id"><i class="fa-solid fa-xmark"></i></a></td>
                                        <td class="image"><img src="~/img/img_products/@item.ImagePath" alt="Item"></td>
                                        <td class="item-name">@item.Name</td>
                                        <td class="qty">
                                            <div class="center">
                                                <div class="qty">
                                                    <button class="minus" value="-" onclick="decreaseQuantity('@item.Id')">
                                                        <i class="fa-solid fa-minus"></i>
                                                    </button>
                                                    <p id="quantity-@item.Id">x @item.Quantity</p>
                                                    <button class="plus" value="+" onclick="increaseQuantity('@item.Id')">
                                                        <i class="fa-solid fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.Price.ToString("0.000") VND</td>
                                        <td class="subtotal">@item.lineTotla.ToString("0.000") VND</td>
                                    </tr>
                                }
                                <tr class="total-bill">
                                    <th colspan="5">Tổng đơn hàng</th>
                                    <td>@Model.Card.getTotal().ToString("0.000") VND</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
                
            </div>
            <div class="col col-lg-4">
                <form class="get-info-form" action="">
                    <h5>Thông tin khách hàng</h5>
                    <table>
                        <tr>
                            <th>Họ tên</th>
                            <th><input type="text"></th>
                        </tr>
                        <tr>
                            <th>MSSV/MSNV</th>
                            <th><input type="text"></th>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <th><input type="text"></th>
                        </tr>
                        <tr>
                            <th>Địa chỉ</th>
                            <th><input type="text"></th>
                        </tr>
                        <tr>
                            <th>Ngày nhận</th>
                            <th><input type="datetime-local"></th>
                        </tr>
                        <tr>
                            <th>Ghi chú</th>
                            <th class="note"><textarea></textarea></th>
                        </tr>
                        <tr>
                            <th></th>
                            <th class="btn-order">
                                <div class="center">
                                    <button><a href="">Đặt hàng</a></button>
                                </div>

                            </th>
                        </tr>
                    </table>

                </form>
            </div>
        </div>
    </div>
</section>

